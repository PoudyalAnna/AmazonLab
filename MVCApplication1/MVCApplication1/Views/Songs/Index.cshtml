@model IEnumerable<MVCApplication1.Models.Song>

@{
    ViewData["Title"] = "Index";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int n = 0; n < Model.Count(); n++)
        {
            <li data-target="#myCarousel" data-slide-to="@n" class="@(n==0)?" active":"")"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
        @for (int n = 0; n < Model.Count(); n++)
        {
            <div class="@(n==0?" item active":"item")">
                <img src="@Model.ElementAt(n).ImagePath" alt="Album Cover" class="img-responsive center-block" width="240" hdight="80" />
                <div class="carousel-caption" role="option">
                    <p>
                        Download
                        <a class="btn btn-default" href="ShoppingCart/@Model.ElementAt(n).Id">
                            @Model.ElementAt(n).Price
                        </a>
                    </p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

